{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["profile_id", "demographics", "clinical"],
    "properties": {
        "profile_id": {"type": "string"},
        "demographics": {
            "type": "object",
            "properties": {
                "name": {"type": "string"},
                "age": {"type": "integer", "minimum": 18, "maximum": 90},
                "gender": {"type": "string"},
                "occupation": {"type": "string"},
                "background": {"type": "string"}
            }
        },
        "clinical": {
            "type": "object",
            "properties": {
                "primary_label": {"type": "string", "description": "Ground-truth diagnostic for evaluation"},
                "primary_code": {"type": "string", "description": "ICD-11 code"},
                "primary_symptoms": {"type": "array", "items": {"type": "string"}},
                "duration": {"type": "string"},
                "severity": {"type": "string", "enum": ["leve", "moderado", "grave"]},
                "negations": {"type": "array", "items": {"type": "string"}},
                "comorbidities": {"type": "array", "items": {"type": "string"}},
                "functional_impairment": {"type": "string"}
            }
        },
        "behavioral": {
            "type": "object",
            "properties": {
                "communication_style": {"type": "string", "enum": ["abierto", "evasivo", "detallado", "lac√≥nico"]},
                "emotional_tone": {"type": "string"}
            }
        }
    }
}
